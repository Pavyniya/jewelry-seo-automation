{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@jewelry-seo/shared/*": ["../../packages/shared/src/*"]
    },
    "types": ["vite/client", "jest"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/components/analytics/**",
    "src/components/automation/**",
    "src/components/content-strategies/**",
    "src/components/ai-providers/**",
    "src/pages/analytics/**",
    "src/pages/automation/**",
    "src/pages/ai-providers/**",
    "src/pages/content-strategies/**",
    "src/services/analyticsService.ts",
    "src/services/automationService.ts",
    "src/stores/analyticsStore.ts",
    "src/stores/automationStore.ts",
    "src/utils/seoCalculations.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}